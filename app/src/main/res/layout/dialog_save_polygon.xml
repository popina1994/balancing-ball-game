<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Unesite ime poligona"/>

    <EditText
        android:id="@+id/editTextNewNameOfPolygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="6dp"
        android:ems="10"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/buttonDialogSavePolygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextNewNameOfPolygon"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextNewNameOfPolygon"
        android:text="Sacuvaj poligon"/>
</RelativeLayout>