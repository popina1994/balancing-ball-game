<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewListItemPolygonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:paddingTop="10dp"
        android:text="Ime poligona"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageViewPolygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewListItemPolygonName"
        android:layout_below="@+id/textViewListItemPolygonName"/>

</RelativeLayout>