<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RatingBar
        android:id="@+id/ratingBarListItemPolygonDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="10"
        android:stepSize="1"
        android:isIndicator="true"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/textViewListItemPolygonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Ime poligona"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/ratingBarListItemPolygonDifficulty"/>

    <ImageView
        android:id="@+id/imageViewPolygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewListItemPolygonName"/>



</RelativeLayout>